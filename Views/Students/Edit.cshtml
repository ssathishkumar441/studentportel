@{
}
@model StudentPortal.Web.Models.Entities.Student

<h1>Edit Student</h1>
@if(Model is null)
{
    <p>No Studend was found with this ID</p>
}

else

{
<form method="post">
    <div class="mt-3">
        <label class="form-lable">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
        <label class="form-lable">Name</label>
            <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="mt-3">
        <label class="form-lable">Email</label>
            <input type="email" class="form-control" asp-for="Email" required />
    </div>

    <div class="mt-3">
        <label class="form-lable">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" required />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete"
        asp-controller="Students">Delete</button>
    </div>

</form>

}